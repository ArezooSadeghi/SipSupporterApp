<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_navy_blue">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/yellow">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/iranyekanwebregular"
                    android:textColor="@color/black"
                    android:textDirection="rtl"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/robotobold"
                    android:textColor="@color/black"
                    android:textDirection="rtl"
                    android:textSize="12sp" />

            </FrameLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            tools:context=".view.fragment.ItemClickedFragment">

            <Button
                android:id="@+id/btn_register_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_button_background"
                android:text="ثبت پشتیبانی"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/yellow" />

            <Button
                android:id="@+id/btn_history_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_button_background"
                android:text="سابقه پشتیبانی"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/yellow" />

            <Button
                android:id="@+id/btn_product_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_button_background"
                android:text="لیست محصولات"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/yellow" />

            <Button
                android:id="@+id/btn_deposit_amounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_button_background"
                android:text="مبالغ واریزی"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/yellow" />

            <Button
                android:id="@+id/btn_see_call_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_button_background"
                android:text="مشاهده اطلاعات تماس"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/yellow" />

        </LinearLayout>

    </FrameLayout>

</layout>